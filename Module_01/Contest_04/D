#include <bits/stdc++.h>
using namespace std;

int main() {
     int n,m;
     cin >> n >> m;
     int arr[n];
     int ar[m];
     for(int i=0;i<n;i++){
        cin >> arr[i];
     }
     for(int i=0;i<m;i++){
        cin >> ar[i];
     }
     int sum=0;
     
     for(int i=0;i<m;i++){
        sum+=arr[ar[i]-1];
     }
     cout << sum << endl;
    return 0;
}
    
